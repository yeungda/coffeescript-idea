<idea-plugin version="2">
  <name>coffeescript-idea</name>
  <description>Syntax highlighting for CoffeeScript</description>
  <version>0.1</version>
  <vendor>David Yeung</vendor>
  <idea-version since-build="8000"/>

  <application-components>
    <!-- Add your application components here -->
      <component>
          <implementation-class>coffeescript.Launcher</implementation-class>
      </component>
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <!-- Add your actions here -->
  </actions>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
      <lang.syntaxHighlighterFactory key="CoffeeScript" implementationClass="coffeescript.lang.Language$HighlighterFactory" />
      <lang.parserDefinition language="CoffeeScript" implementationClass="coffeescript.lang.ParserDefinition"/>

  </extensions>
</idea-plugin>